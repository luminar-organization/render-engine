{
  "name": "luminar-organization/render-engine",
  "description": "The render engine package for the Luminar PHP framework, supporting different templating engines.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Patryk Molenda",
      "email": "patryk.fr.molenda@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "twig/twig": "^3.0",
    "luminar-organization/http": "*"
  },
  "autoload": {
    "psr-4": {
      "Luminar\\RenderEngine\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Luminar\\RenderEngine\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": ">=11.3.1"
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "dev"
}
